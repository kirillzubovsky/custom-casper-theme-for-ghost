{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}

{{!-- Everything inside the #author tags pulls data from the author --}}
{{#author}}
    <header class="main-header author-head {{#if cover}}" style="background-image: url({{cover}}){{else}}no-cover{{/if}}">
        <nav class="main-nav overlay clearfix">
            {{#if @blog.navigation}}
                <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
            {{/if}}
        </nav>
    </header>

    <section class="author-profile inner">
        {{#if image}}
        <figure class="author-image">
            <div class="img" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></div>
        </figure>
        {{/if}}
        <h1 class="author-title">Kirill Zubovsky</h1>
        {{#if bio}}
            <h2 class="author-bio">{{bio}}</h2>
        {{/if}}
        <div class="author-meta">
            {{#if location}}<span class="author-location icon-location">{{location}}</span>{{/if}}
            <span class="author-stats"><i class="icon-stats"></i> {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
            <br><br>
            <div style="clear:both;"></div>
            <ul class="author-social-profiles">
              <li><a href='http://kirillzubovsky.com/author/kirill' title='Kirill Zubovsky Blog Posts '>Blog</a></li>
              <li><a href='http://twitter.com/kirillzubovsky' title='Kirill Zubovsky on Twitter'>Twitter</a></li>
              <li><a href='https://www.linkedin.com/in/kirillzubovsky' title='Kirill Zubovsky on LinkedIn'>Linkedin</a></li>
              <li><a href='https://www.producthunt.com/@kirillzubovsky' title='Kirill Zubovsky on Product Hunt'>Product Hunt</a></li>
              <li><a href='http://instagram.com/kirillzubovsky' title='Kirill Zubovsky on Instagram'>Instagram</a></li>
              <li><a href='https://dribbble.com/kirillzubovsky' title='Kirill Zubovsky on Instagram'>Dribbble</a></li>
              <li><a href='http://github.com/kirillzubovsky/' title='Kirill Zubovsky on Instagram'>Github</a></li>
              <li><a href='https://creativemarket.com/kirill' title='Kirill Zubovsky on Creative Market'>Creative Market</a></li>
              <li><a href="http://kirill.io" title="Sponsor a Runner!">✌️kirill.io</a></li>
            </ul>
            <div style="clear:both;"></div>
        </div>
    </section>
{{/author}}

{{!-- The main content area on the homepage --}}
<main class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
